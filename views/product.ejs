<html lang="pl_PL">
  <head>
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath:
      activeLinkPath }); %> <% if (product) { %>
      <h1 class="heading"><%= product.name %></h1>
      <br />
      <div><%= product.description %></div>
      <button onclick="deleteProduct('<%= product.name %>')">Delete</button>
      <% } else { %>
      <h1 class="heading">Product not found</h1>
      <br />
      <div>The requested product does not exist.</div>
      <% }%>
    </main>
  </body>
  <script>
    function deleteProduct(name) {
      if (!confirm(`Are you sure you want to remove ${name}?`)) {
        return;
      }

      fetch(`/products/${name}`, {
        method: 'DELETE',
      }).then((response) => {
        console.log(response);
        if (response.ok) {
          window.location.href = '/products';
        } else {
          alert('Error while removing product.');
        }
      });
    }
  </script>
</html>
